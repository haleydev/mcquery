    "autoload": {
        "psr-4": {
            "Core\\": "core/",
            "App\\": "app/",
            "Controllers\\": "controllers/",
            "Models\\": "models/"
        }
    },
    
    "require": {
        "php": "^8.0.2",      
        "phpmailer/phpmailer": "^6.6"
    },

    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },

    "minimum-stability": "dev",
    "prefer-stable": true  
}
