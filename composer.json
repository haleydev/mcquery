{
    "name": "haleydev/mcquery",
    "type": "project",
    "description": "The mcquery framework",
    "keywords": ["framework", "mcquery", "mcv", "haleydev", "php"],
    "license": "MIT",
    "authors": [
        {            
            "name": "Warley Rodrigues de Moura",            
            "email": "haleytrader@hotmail.com",
            "homepage": "https://github.com/haleydev/mcquery",
